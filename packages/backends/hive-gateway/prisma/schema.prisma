// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  name String
  email String
  password String

  organisations Organisation[]
}

model Organisation {
  id String @id
  name String
  users User[]

  roles Role[]
  applications Application[]
}

model Application {
  id String @id
  name String

  users Organisation[]
  usedInRoles Role[]
}

model Role {
  id String @id
  name String

  applications Application[]
  permissions Permission[]

  organisationId String
  organisation Organisation @relation(fields: [organisationId], references: [id])
}

model Permission {
	id String @id 
	name String

	action String
	scope String

  roles Role[]
}