{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "composite": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../../shared/hexhive-auth-ui"
    },
    {
      "path": "../../shared/hexhive-utils"
    },
    {
      "path": "../../core/hexhive-ui"
    },
    {
      "path": "../../shared/hexhive-styles"
    }
  ]
}
